<configuration>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{dd MMM yy, yyyy HH:mm:ss.SSS} [%thread] %logger%n%-5level: %msg%n%rEx</pattern>
        </encoder>
    </appender>

    <logger name="com.formation.projet" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
